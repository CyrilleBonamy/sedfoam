FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alpha_a;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;  

boundaryField
{
    cylinder
    {
	type            zeroGradient;
    }
    inlet
    {
        type            groovyBC;
        valueExpression "0.6128*0.5*(1.0+tanh((-0.026-pos().y)*1000))";
    }
    outlet
    {
        type            zeroGradient;
    }
    lateralfront
    {
        type            empty;
    }
    lateralback
    {
        type            empty;
    }
    bottom
    {
        type            zeroGradient;
    }
    surface
    {
        type            symmetryPlane;
    }
}


